# Database Configuration
VITE_SUPABASE_URL=your_project_url                 # Supabase project URL
VITE_SUPABASE_ANON_KEY=your_anon_key              # Supabase anonymous key
SUPABASE_ACCESS_TOKEN=your_access_token            # For admin operations
SUPABASE_DB_PASSWORD=your_db_password              # For direct DB access

# Application Settings
VITE_APP_NAME=ITC Jeopardy                        # Application name
VITE_QUESTION_TIMER=30000                         # Question time limit (ms)
VITE_DAILY_DOUBLE_MIN_WAGER=5                    # Minimum daily double wager
VITE_DAILY_DOUBLE_MAX_WAGER=1000                 # Maximum daily double wager
VITE_DAILY_DOUBLES_PER_GAME=3                    # Daily doubles per game

# Game Configuration
VITE_MIN_POINTS=200                              # Minimum question points
VITE_MAX_POINTS=1000                            # Maximum question points
VITE_CATEGORIES_PER_GAME=5                      # Categories per game
VITE_QUESTIONS_PER_CATEGORY=5                   # Questions per category

# Development Settings
NODE_ENV=development                            # Environment (development/production)
VITE_DEV_MODE=false                            # Enable dev features
VITE_API_MOCKING=false                         # Enable API mocking
VITE_LOG_LEVEL=error                           # Log level (debug/info/warn/error)

# Database Scripts Configuration
DB_AUTO_RESET=false                            # Auto reset on script errors
DB_BACKUP_ENABLED=true                         # Enable auto-backups
DB_BACKUP_PATH=./backups                       # Backup directory
DB_SCRIPT_TIMEOUT=30000                        # Script timeout (ms)
DB_WATCH_INTERVAL=60000                        # Watch refresh interval (ms)

# Deployment Settings
VITE_BASE_URL=/                               # Base deployment URL
VITE_GITHUB_PAGES=false                       # Enable GitHub Pages
CI=false                                      # Continuous Integration mode

# Security Settings
VITE_ADMIN_PASSWORD=your_admin_password       # Admin dashboard password
VITE_API_RATE_LIMIT=100                       # API requests per minute
VITE_SESSION_TIMEOUT=3600000                  # Session timeout (ms)
